<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post-main">

  <div class="col-md-5 post-header">
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <h1 class="header-title"><a href="/post/{{post.id}}">{{post.name}}</a></h1>
      <h2 class="post-timestamp">Created by {{post.user.name}} on {{format_date post.date_created}}</h2>
  </div>

  <div class="posted-text">
    <p>
      {{post.description}}
    </p>
  </div>

  

</div>
{{/each}}
