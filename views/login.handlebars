<div class="row log-connect">
  <div class="col-md-6 login-main">
    <h1>Login</h1>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="email-text">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="password-text">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary login-btn" type="submit">login</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <h1 class="signup-main">Signup</h1>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="name-text">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="email-text">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="password-text">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary signup-btn" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
